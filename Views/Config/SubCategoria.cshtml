@model IList<SNP.Models.vw_Categoria_x_SubCategoria>

@{
    string title = "SubCategorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12" style="padding-bottom: 10px;">
        <a class="btn btn-success" href="@Url.Action("NovaSubcategoria","Config")">Novo</a>
    </div>
</div>
<div class="panel panel-inverse">
    <!-- begin panel-heading -->
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
        <h4 class="panel-title">Todas as @title</h4>
    </div>
    <!-- end alert -->
    <!-- begin panel-body -->
    <div class="panel-body">
        <table id="data-table-config" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="1%">ID</th>
                    <th>Categoria</th>
                    <th>Nome</th>
                    <th>Cor</th>
                    <th width="1%">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.ID_SUBCATEGORIA</td>
                    <td>@item.NomeCategoria</td>
                    <td>@item.NomeSubCategoria</td>
                    <td><label style="background-color: @item.CorCategoria; color: white;">@item.CorCategoria</label>  </td>
                    <td class="with-btn" nowrap>
                        <a class="btn btn-warning" href="@Url.Action("NovaSubCategoria","Config", new { ID = item.ID_SUBCATEGORIA})">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("ExcluirSubCategoria","Config", new { ID = item.ID_SUBCATEGORIA})">Excluir</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- end panel-body -->
</div>

@section Styles {
    @Styles.Render("~/Content/tables")
}

@section Scripts {
    @Scripts.Render("~/bundles/ppp")
    @Scripts.Render("~/bundles/tables")
}

