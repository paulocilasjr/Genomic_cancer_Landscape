@model IList<SNP.Models.Categoria>

@{
    string title = "Categorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12" style="padding-bottom: 10px;">
        <a class="btn btn-success" href="@Url.Action("NovaCategoria","Config")">Novo</a>
    </div>
</div>
<div class="panel panel-inverse">
    <!-- begin panel-heading -->
    <div class="panel-heading">
        <div class="panel-heading-btn">
            <a href="javascript:;" class="btn btn-xs btn-icon btn-circle btn-default" data-click="panel-expand"><i class="fa fa-expand"></i></a>
        </div>
        <h4 class="panel-title">Todas as @title</h4>
    </div>
    <!-- end alert -->
    <!-- begin panel-body -->
    <div class="panel-body">
        <table id="data-table-config" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th width="1%">ID</th>
                    <th width="90%">Nome</th>
                    <th width="90%">Cor</th>
                    <th width="1%">Opções</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>@item.ID</td>
                    <td width="90%">@item.Nome</td>
                    <td width="90%"><label style="background-color: @item.Cor; color: white;">@item.Cor</label>  </td>
                    <td class="with-btn" nowrap>
                        <a class="btn btn-warning" href="@Url.Action("NovaCategoria","Config", new { ID = item.ID})">Editar</a>
                        <a class="btn btn-danger" href="@Url.Action("ExcluirCategoria","Config", new { ID = item.ID})">Excluir</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- end panel-body -->
</div>

@section Styles {
    @Styles.Render("~/Content/tables")
}

@section Scripts {
    @Scripts.Render("~/bundles/ppp")
    @Scripts.Render("~/bundles/tables")
}

